    </video>

    <div class="loading-container">
        <div class="spinner"></div>
        <h1 id="loading-message" class="loading-text">Загрузка данных пользователя...</h1>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const SUPABASE_URL = 'https://yefycpbjwlwsaudqhjbq.supabase.co'; 
            const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InllZnljcGJqd2x3c2F1ZHFoamJxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTExMDgxNTQsImV4cCI6MjA2NjY4NDE1NH0.OZkdxE-om9B-_BngpB4FzmEa9K_Vfs5bJYoQpxmhLQU';

            const { createClient } = supabase;
            const supabaseClient = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
            const loadingMessage = document.getElementById('loading-message');

            // 1. Проверяем наличие сессии пользователя
            const { data: { session }, error: sessionError } = await supabaseClient.auth.getSession();

            if (sessionError) {
                loadingMessage.textContent = 'Ошибка сессии. Перенаправление...';
                // window.location.href = '/'; // Раскомментируйте для перенаправления на главную
                return;
            }

            if (!session) {
                loadingMessage.textContent = 'Доступ запрещен. Перенаправление на страницу входа...';
                // window.location.href = '/'; // Раскомментируйте для перенаправления
                return;
            }

            // 2. Если сессия есть, получаем данные пользователя из таблицы 'users'
            try {
                const { data: user, error: userError } = await supabaseClient
                    .from('users')
                    .select('nickname')
                    .eq('id', session.user.id)
                    .single();

                if (userError) throw userError;
                
                // 3. Показываем приветственное сообщение
                if (user && user.nickname) {
                    loadingMessage.textContent = `Добро пожаловать, ${user.nickname}! Подготовка рабочего пространства...`;
                } else {
                    loadingMessage.textContent = 'Добро пожаловать! Подготовка рабочего пространства...';
                }

                // 4. Имитируем загрузку и переходим на следующую страницу
                setTimeout(() => {
                    // Здесь будет логика для отображения основного контента рабочего стола
                    // Пока что просто уберем сообщение о загрузке
                    document.body.innerHTML = `
                        <video autoplay muted loop id="video-bg">
                           <source src="https://assets.mixkit.co/videos/preview/mixkit-interstellar-orbit-of-a-planet-in-space-39626-large.mp4" type="video/mp4">
                        </video>
                        <div style="z-index: 10;">
                           <h1 style="font-size: 3em; text-shadow: 0 0 15px var(--primary-glow);">Рабочее пространство</h1>
                           <p style="color: var(--text-secondary);">Основной контент будет здесь.</p>
                        </div>
                    `;
                }, 2500); // Задержка в 2.5 секунды для демонстрации

            } catch (error) {
                loadingMessage.textContent = `Ошибка при загрузке данных: ${error.message}`;
            }
        });
    </script>
</body>
